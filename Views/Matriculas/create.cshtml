@model EstudiantesMVC.Models.Matricula

<div class="container mt-4">
    <h1 class="mb-4">Agregar Matr√≠cula</h1>

    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="EstudianteId" class="form-label">Estudiante</label>
            <select asp-for="EstudianteId" class="form-control" asp-items="@(new SelectList(ViewBag.Estudiantes, "Id", "Nombre"))"></select>
