@model IEnumerable<EstudiantesMVC.Models.Estudiante>

@{
    ViewData["Title"] = "Estudiantes";
}

<div class="container mt-4">
    <h1 class="mb-4">Estudiantes</h1>
    <a href="@Url.Action("create")" class="btn btn-primary mb-3">Agregar Estudiante</a>
    
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var estudiante in Model)
            {
                <tr>
                    <td>@estudiante.Nombre</td>
                    <td>@estudiante.Apellido</td>
                    <td>@estudiante.Email</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = estudiante.Id })" class="btn btn-warning btn-sm">Editar</a>
                        <a href="@Url.Action("DeleteConfirmed", new { id = estudiante.Id })" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>